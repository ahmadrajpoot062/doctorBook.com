<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manage Account</title>
    <link href="~/lib/bootstrap/bootstrap css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/my css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @RenderSection("Styles", required: false)
    <style>
        body {
            background-image: url(/images/feedback-bg.jpg);
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>

</head>
<body>
    <nav id="navbar" class="navbar navbar-expand-lg mb-2 border-bottom-dark py-2 shadow sticky-top"
         style=" background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
        <div class="container">
            <div class="row w-100">
                <div id="col1" class="col-auto col-lg order-1 order-lg-2">
                    <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-lg-flex justify-content-lg-start bg-transparent rounded"
                         id="navbarSupportedContent">
                        <ul class="navbar-nav mb-2 mb-lg-0 w-100 justify-content-between">                            
                            <li class="ms-lg-auto mt-2 mt-lg-0">
                                <partial name="_LoginPartial">
                            </li>
                        </ul>
                    </div>
                </div>
                <div id="col2" class="col-auto order-2 order-lg-1 d-flex justify-content-end">
                    <a href="/Admin/Index" class="navbar-brand mb-0 h1 text-white fwt-bold d-lg-none d-xl-block ">
                        doctorBook.com
                        <i class="fa fa-user-md fs-3"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container pt-5">
        <div class="h1 mb-5 display-5 fw-bolder fst-italic text-center px-2 px-sm-0 shadow pb-2"
             style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: rgb(152, 37, 165);">
            Manage your account<i class="fa fa-solid fa-gear ms-3"></i>
        </div>
        <h2 class="text-center" style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: rgb(152, 37, 165);">Change your account settings<i class="bi bi-pen ms-2"></i></h2>
        <div>
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-3">
                        <partial name="_ManageNav" />
                    </div>
                    <div class="col-md-9 mt-3">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer id="layoutFooter" class="bd-footer py-1 py-md-2 mt-5 border-top text-white"
            style=" background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
        <div class="container py-5 px-4 px-md-3 text-body-secondary">
            <div class="row">
                <div class="col-12">
                    <i class="fa fa-user-md fs-3 text-white"></i>
                    <span class="fs-5 fw-bold text-white">doctorBook.com</span>
                    <p class="text-light">&copy; 2024 doctorBook.com all rights reserved.   <a href="/Home/Terms_of_use" class="text-decoration-line text-primary">Terms-of-use</a></p>
                    <div class="row mt-3">
                        <div class="col-6 col-lg-12">
                            <p class="text-white mb-1 fw-bold" style="font-size:large;">Follow Us on:</p>
                            <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="me-2"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="me-2"><i class="fab bi-linkedin"></i></a>
                        </div>
                        <div class="col-6 col-lg-12 text-end mt-2">
                            <a class="top" href="#">Back to Top</a>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </footer>

    @if (User.Identity?.Name == null)
    {
        <div class="alert alert-secondary mb-0 alert-dismissible show sticky-bottom rounded-0" role="alert">
            <strong>Attention!</strong> You have to <a style="color:black;" href="/Identity/Account/Login">Login</a> first for booking a
            doctor.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @RenderSection("Scripts", required: false)
    <script src="~/lib/bootstrap/bootstrap js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var dropdowns = document.querySelectorAll('.navbar-nav .dropdown');

            dropdowns.forEach(function (dropdown) {
                dropdown.addEventListener('mouseover', function () {
                    var dropdownMenu = dropdown.querySelector('.dropdown-menu');
                    dropdownMenu.classList.add('show');
                });

                dropdown.addEventListener('mouseleave', function () {
                    var dropdownMenu = dropdown.querySelector('.dropdown-menu');
                    dropdownMenu.classList.remove('show');
                });
            });
        });
    </script>

</body>
</html>


