@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
@section Styles {
    <style>
        .btn {
            background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);
        }

            .btn:hover {
                background: rgb(146, 11, 108);
                transform: scale(1.03);
                transition: transform 0.2s ease-in-out;
            }
    </style>
}
    
    <div class="row">
        <div class="col-md-6 mx-auto">
        <h3 class="text-center fw-bold" style="color:purple">@ViewData["Title"]<i class="bi bi-info-circle ms-2"></i></h3>
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <p>
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
            <div class="d-flex justify-content-between">
                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <button class="btn text-white" type="submit">Download</button>
                </form>
                <p>
                    <a id="delete" asp-page="DeletePersonalData" class="btn text-white">Delete</a>
                </p>
            </div>
        </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
