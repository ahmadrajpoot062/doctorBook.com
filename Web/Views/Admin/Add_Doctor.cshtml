@{
    Layout = null;
}

@model Doctor

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Doctor - Admin Panel</title>
    <link href="~/lib/bootstrap/bootstrap css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/my css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            background-image: url("~/images/feedback-bg.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }

        form {
            width: 100%;
        }

        @@media screen and (min-width:992px) {
            form {
                width: 75%;
            }
        }

        @@media screen and (min-width:1200px) {
            form {
                width: 50%;
            }
        }

        #backToHome .btn {
            color: white;
            background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);
        }

            #backToHome .btn:hover {
                background: rgb(103, 15, 112);
                border-color: blueviolet;
                transform: scale(1.03);
                transition: transform 0.2s ease-in-out;
            }
    </style>
</head>

<body class="mt-3">

    <div class="container">
        <div class="row ">
            <div class="col-12">
               <partial name="_AdminLoginPartial" />
                <div class="h1  display-5 fw-bolder fst-italic text-center px-2 px-sm-0 shadow py-2"
                     style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: rgb(152, 37, 165);">
                    Add Doctor <i class="fa fa-user-plus"></i>
                </div>
                <form method="post" asp-action="Add_Doctor"
                      class="my-5 shadow bg-light border border-dark border-1 rounded-3 p-3 text-white mx-auto"
                      style="background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">

                    <div class="form-section mb-4 d-flex justify-content-between">
                        <div class="d-inline-block" style="width: 48%;">
                            <label asp-for="First_Name" for="FirstName">First Name</label>
                            <input asp-for="First_Name" class="form-control" id="FirstName"
                                   placeholder="First name">
                            <span asp-validation-for="First_Name"></span>
                        </div>
                        <div class="d-inline-block" style="width: 48%;">
                            <label asp-for="Last_Name" for="LastName">Last Name</label>
                            <input asp-for="Last_Name" class="form-control" id="LastName"
                                   placeholder="Last name">
                            <span asp-validation-for="Last_Name"></span>
                        </div>
                    </div>

                    <div class="form-section mb-4">
                        <label asp-for="Email" for="doctorEmail" class="form-label text-white">Email</label>
                        <input asp-for="Email" class="form-control" id="doctorEmail"
                               placeholder="Enter doctor's Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-section mb-4">
                        <label asp-for="Speciality" for="DoctorSpecialty" class="form-label text-white">Specialty</label>
                        <select asp-for="Speciality" id="DoctorSpecialty" class="w-100 p-1 rounded-start-2 rounded-end-2">
                            <option value="Cardiologist">Cardiologist</option>
                            <option value="Neurologist">Neurologist</option>
                            <option value="Dentist">Dentist</option>
                            <option value="Eye-Specialist">Eye-Specialist</option>
                        </select>
                    </div>
                    <div class="form-section mb-4">
                        <label asp-for="Qualification" for="DoctorQualification" class="form-label text-white">Qualification</label>
                        <input asp-for="Qualification" class="form-control" id="DoctorQualification"
                               placeholder="Enter Doctor's qualification">
                        <span asp-validation-for="Qualification"></span>
                    </div>

                    <div class="form-section mb-4 d-flex justify-content-between">
                        <div class="d-inline-block" style="width: 48%;">
                            <label for="StartTime" class="form-label text-white">Start Time</label>
                            <div class="d-flex">
                                <select class="w-50 rounded-0 rounded-start-2 p-1" id="StartTime" name="StartHour">
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                                <select class="w-50 rounded-0 rounded-end-2 p-1" id="StartTime" name="StartAMPM">
                                    <option value="AM">AM</option>
                                    <option value="PM">PM</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-inline-block" style="width: 48%;">
                            <label for="EndTime" class="form-label text-white">End Time</label>
                            <div class="d-flex">
                                <select class="w-50 p-1 rounded-0 rounded-start-2" id="EndTime" name="EndHour">
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                                <select class="w-50 p-1 rounded-0 rounded-end-2" id="EndTime" name="EndAMPM">
                                    <option value="AM">AM</option>
                                    <option value="PM">PM</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="form-section mb-4">
                        <label asp-for="Charges" for="DoctorCharges" class="form-label text-white">Charges in PKR</label>
                        <input asp-for="Charges" type="number" class="form-control" id="DoctorCharges"
                               placeholder="Enter Doctor's consultation charges">
                        <span asp-validation-for="Charges"></span>
                    </div>
                    <div class="form-section mb-4">
                        <label asp-for="Experiance" for="DoctorExperience" class="form-label text-white">Experience</label>
                        <input asp-for="Experiance" class="form-control" id="DoctorExperience"
                               placeholder="Enter Doctor's experience in years" >
                        <span asp-validation-for="Experiance"></span>
                    </div>
                    <div class="form-section mb-4">
                        <label asp-for="Consultation_Time" for="DoctorAvgTime" class="form-label text-white">Avg Consultation Time (mins)</label>
                        <input asp-for="Consultation_Time" class="form-control" id="DoctorAvgTime"
                               placeholder="Enter average consultation time">
                        <span asp-validation-for="Consultation_Time"></span>
                    </div>
                    <div class="form-section mb-4">
                        <label asp-for="Wait_Time" for="DoctorWaitTime" class="form-label text-white">
                            Avg Wait Time
                            (mins)
                        </label>
                        <input asp-for="Wait_Time" class="form-control" id="DoctorWaitTime" 
                               placeholder="Enter average wait time">
                        <span asp-validation-for="Wait_Time"></span>
                    </div>
                    <div class="form-section mb-4">
                        <label asp-for="Diagnosis_Satisfaction" for="Diagnosis_Satisfaction" class="form-label text-white">
                            Diagnosis
                            Satisfaction in %
                        </label>
                        <input asp-for="Diagnosis_Satisfaction" class="form-control" id="Diagnosis_Satisfaction"
                               placeholder="Enter Doctor's avg. Diagnosis_Satisfaction (e.g., 97%)">
                        <span asp-validation-for="Diagnosis_Satisfaction"></span>
                    </div>

                    <div class="form-section d-flex justify-content-center">
                        <button type="submit" class="btn text-white border"
                                style="background: linear-gradient(180deg, rgb(89, 31, 103) 0%, rgb(190, 74, 203) 100%);">
                            Add
                            Doctor!
                        </button>
                    </div>
                </form>
                <div id="backToHome" class="d-flex justify-content-center">
                    @Html.ActionLink(" Back to Home", "Index", "Admin", null, new { @class = "btn mb-5 px-5 py-3 mt-2  rounded-3 text-white text-decoration-none fa fa-arrow-left me-2" })
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="~/lib/bootstrap/bootstrap js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />;
    
</body>

</html>
