@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Doctor Management - Admin Panel</title>
    <link href="~/lib/bootstrap/bootstrap css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/my css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            background-image: url("~/images/feedback-bg.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }

        .card{
            min-height:200px;
        }
    </style>
</head>
<body class="mt-3">

    <div class="container">
        <div class="row ">
            <div class="col px-3 px-sm-5 pb-3">
                <partial name="_AdminLoginPartial" />
                    <div class="h3 fw-bolder fst-italic text-center px-2 px-sm-0 shadow py-4 "
                         style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: rgb(152, 37, 165);">
                        Doctor
                        Management - Admin Panel
                    </div>
                    <div class="h4 fw-bold my-4 w-75">
                    <i class="fa fa-solid fa-hand-wave me-1"></i>Welcome Admin!, <div style="color:rgb(116, 34, 136);">
                            Here you can
                        </div>
                    </div>
                    <div class="row row-cols-1 row-cols-lg-2 g-4 pb-4">
                        <div class="col">
                            <a href="/Admin/Add_Doctor" class="text-decoration-none">
                                <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-primary text-white">
                                    <i class="fa fa-user-plus fs-1 mb-3"></i>
                                    <h3>Add Doctor</h3>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="/Admin/View_Doctors" class="text-decoration-none">
                                <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-success text-white">
                                    <i class="fa fa-eye fs-1 mb-3"></i>
                                    <h3>View Doctors</h3>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="/Admin/Update_Doctor" class="text-decoration-none">
                                <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-warning text-white">
                                    <i class="fa fa-edit fs-1 mb-3"></i>
                                    <h3>Update Doctor</h3>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="/Admin/Delete_Doctor" class="text-decoration-none">
                                <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-danger text-white">
                                    <i class="fa fa-trash fs-1 mb-3"></i>
                                    <h3>Delete Doctor</h3>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="/Admin/View_Users" class="text-decoration-none">
                                <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-secondary text-white">
                                    <i class="fa fa-eye fs-1 mb-3"></i>
                                    <h3>View Users</h3>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="/Admin/View_Appointments" class="text-decoration-none">
                                <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-info text-white">
                                    <i class="fa fa-eye fs-1 mb-3"></i>
                                    <h3>View All Appointment Requests</h3>
                                </div>
                            </a>
                        </div>                   
                </div>
            </div>

        </div>
    </div>
    <script src="~/lib/bootstrap/bootstrap js/bootstrap.bundle.min.js"></script>
</body>

</html>



                