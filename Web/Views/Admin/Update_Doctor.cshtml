@{
    Layout = null;
}

@model List<Doctor>

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Update Doctor - Admin Panel</title>
    <link href="~/lib/bootstrap/bootstrap css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/my css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        #backToHome .btn {
            color: white;
            background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);
        }

            #backToHome .btn:hover {
                background: rgb(103, 15, 112);
                border-color: blueviolet;
                transform: scale(1.03);
                transition: transform 0.2s ease-in-out;
            }

    </style>
</head>

<body class="mt-3">

    <div class="container">
        <div class="row ">
            <div class="col-12">
                <partial name="_AdminLoginPartial" />
                <div class="h1 display-5 fw-bolder fst-italic text-center px-2 px-sm-0 shadow py-2 mt-5 mt-sm-3"
                     style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: rgb(152, 37, 165);">
                    Update
                    Doctors<i class="fa fa-edit ms-2"></i>
                </div>

                <div class="table-responsive">
                    <table class="table  table-striped-columns table-hover mt-5 align-middle border border-dark">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>                                
                                <th scope="col">Email</th>
                                <th scope="col">Speciality</th>
                                <th scope="col">Qualification</th>
                                <th scope="col">Timings</th>
                                <th scope="col">Charges</th>
                                <th scope="col">Experience</th>
                                <th scope="col">Consultation Time</th>
                                <th scope="col">Wait Time</th>
                                <th scope="col">Diagnosis Satisfaction</th>
                                <th scope="col">Update?</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            @foreach (var Doctor in Model)
                            {
                                <tr>
                                    <td>@Doctor.Id</td>
                                    <td>@Doctor.First_Name @Doctor.Last_Name</td>                                    
                                    <td>@Doctor.Email</td>                                    
                                    <td>@Doctor.Speciality</td>
                                    <td>@Doctor.Qualification</td>
                                    <td>@Doctor.Timings</td>
                                    <td>@Doctor.Charges pkr</td>
                                    <td>@Doctor.Experiance years</td>
                                    <td>@Doctor.Consultation_Time mins</td>
                                    <td>@Doctor.Wait_Time mins</td>
                                    <td>@Doctor.Diagnosis_Satisfaction %</td>                                 
                                    <td><a href="/Admin/Update_Doctor_Form?id=@Doctor.Id" class="d-inline me-1 btn btn-primary rounded-1">Update</a><a href="/Admin/Doctor_Profile?id=@Doctor.Id" class="d-inline btn px-3 btn-success">View</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div id="backToHome" class="d-flex justify-content-center">
                    @Html.ActionLink(" Back to Home", "Index", "Admin", null, new { @class = "btn mb-5 mt-3 py-3 px-5 p-2 rounded-3 text-white text-decoration-none fa fa-arrow-left me-2" })
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/bootstrap js/bootstrap.bundle.min.js"></script>
</body>

</html>