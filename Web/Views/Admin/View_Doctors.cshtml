@model List<Doctor>

@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Doctors - Admin Panel</title>
    <link href="~/lib/bootstrap/bootstrap css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/my css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	
    <style>
        #backToHome .btn {
            color: white;
            background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);
        }

            #backToHome .btn:hover {
                background: rgb(103, 15, 112);
                border-color: blueviolet;
                transform: scale(1.03);
                transition: transform 0.2s ease-in-out;
            }

    </style>
</head>

<body class="mt-3">

    <div class="container">
        <div class="row ">
            <div class="col-12">
                <partial name="_AdminLoginPartial" />
                <div class="h1 display-5 fw-bolder fst-italic text-center px-2 px-sm-0 mt-2 mb-5 shadow py-2"
                     style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: rgb(152, 37, 165);">
                    List of all
                    Doctors<i class="fa fa-solid fa-list ms-3"></i>
                </div>

                @if (Model == null || !Model.Any())
                {
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <img src="~/images/noDataFound.jpg" style="height:40%;width:40%;" />
                    </div>
                }
                else
                {
                    <div class="container">
                        <div class="row">
                            <div class="col-4 ms-auto">
                                 <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                                     <div class="input-group shadow " style="height: 45px;">
                                        <input id="speciality" type="search" class="border border-secondary form-control" placeholder="Search by Speciality..." aria-label="Search">
                                        <button id="search" class="btn btn-outline-secondary" type="button">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                
                    <div id="list">
                        <partial name="_viewDoctorsPartial" model="Model" />
                    </div>
                }
                <div class="">
                    @Html.ActionLink(" Add new Doctor", "Add_Doctor", "Admin", null, new { @class = "fa fa-solid fa-plus btn btn-primary mb-5 px-3 p-2 rounded-1 text-white text-decoration-none" })
				</div>
				<div id="backToHome" class="d-flex justify-content-center">
                    @Html.ActionLink(" Back to Home", "Index", "Admin", null, new { @class = "btn mb-5 px-5 py-3 p-2 rounded-3 text-white text-decoration-none fa fa-arrow-left me-2" })
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/bootstrap js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js"></script>
	
</body>

</html>