
@{
    ViewData["Title"] = "Contact_Us";
}

@section Styles {
    <style>
        body {
            background-image: url('/images/feedback-bg.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
}

<marquee class="fst-italic fw-bold" behavior="sroll" scrollamount="10" style="color: rgb(62, 9, 68);">
    "Have
    questions about booking appointments? Contact
    Us."
</marquee>

<div class="h1 display-5 fw-bolder fst-italic text-center px-2 px-sm-0 shadow pb-2"
     style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: rgb(152, 37, 165);">
    <i class="bi bi-telephone me-1"></i>Contact Us
</div>

<div class="container mt-4 mb-5">
    <div class="row contact-section">
        <div class="col-12">
            <h2>Have Questions?</h2>
            <p>
                We're here to help! Feel free to contact us using the methods below. Our friendly customer support
                team is available to answer your questions and assist you with any concerns.
            </p>
            <div class="contact-info">
                <i class="bi bi-telephone text-success"></i>
                <a href="tel:+1234567890" class="text-decoration-none">+92 3348122956</a>
            </div>
            <div class="contact-info">
                <i class="bi bi-envelope text-danger"></i>
                <a href="mailto:support@doctorBook.com" class="text-decoration-none">support@doctorBook.com</a>
            </div>
            <p class="mb-0 fst-italic">Our support hours are:</p>
            <p>Monday - Friday: 9:00 AM - 5:00 PM PST</p>
            <p>You can also message us through the form given below</p>
        </div>
        <div class="col-12 my-4 rounded"
             style="background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
            <form method="post" id="message-form"
                  class="bg-light p-4 p-lg-5 border border-dark rounded-4 my-5 mx-auto">
                <div class="h1 fw-bolder fst-italic text-center shadow-sm pb-3 mb-4"
                     style="font-family: Verdana, Geneva, Tahoma, sans-serif; color:rgb(163, 33, 178);">
                    Message Us<i class="bi bi-envelope ms-2"></i>
                </div>
                <div class="mb-3">
                    <label for="exampleInputName" class="form-label">Name</label>
                    <input type="text" class="form-control hover-size" id="exampleInputName" name="Name">
                </div>              
                <div class="mb-5">
                    <label for="message" class="form-label">Message (Required)</label>
                    <textarea class="form-control hover-size" id="message" name="message" rows="5"
                              placeholder="Your Message here..." required></textarea>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn text-white"
                            style="background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
                        Send
                        Message <i class="bi bi-send"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="col-12">
            <h2>Stay Connected</h2>
            <p>
                Follow us on social media for the latest updates, news, and tips on using doctorBook.com to manage
                your healthcare effectively.
            </p>
            <div class="social-media">
                <ul class="list-unstyled">
                    <li>
                        <a href="#" class="me-3 fs-sm-5">
                            <i class="bi bi-facebook me-1"></i>Facebook
                        </a>
                    </li>
                    <li class="mt-2">
                        <a href="#" class="me-3 fs-sm-5">
                            <i class="bi bi-twitter me-1"></i>Twitter
                        </a>
                    </li>
                    <li class="mt-2">
                        <a href="#" class="me-3 fs-sm-5">
                            <i class="fab bi-linkedin me-1"></i>LinkedIn
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

