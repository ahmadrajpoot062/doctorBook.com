<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book Your Appointment Online</title>
    <link href="~/lib/bootstrap/bootstrap css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/my css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">   
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav id="navbar" class="navbar navbar-expand-lg mb-2 border-bottom-dark py-2 shadow sticky-top"
         style=" background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
        <div class="container">
			<div class="row w-100">
			    <div id="col1" class="col-auto col-lg order-1 order-lg-2">
                    <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-lg-flex justify-content-lg-start bg-transparent rounded"
                         id="navbarSupportedContent">
                        <ul class="navbar-nav mb-2 mb-lg-0 w-100 justify-content-between">
                            <li class="nav-item me-2">
                                @Html.ActionLink(" Home", "Index", "Home", null, new { @class = "bi bi-house nav-link", style = ViewData["Title"]?.ToString() == "Home" ? "background-color: rgb(168, 74, 192); border:1px solid white;" : "" })
                            </li>
                            <li class="nav-item dropdown me-2">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">Doctors</a>
                                <ul class="dropdown-menu border border-dark shadow"
                                    style="background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
                                    <li>
                                        @Html.ActionLink("Cardiologist", "Doctors_Cardiologist", "Home", null, new { @class = "dropdown-item", style = ViewData["Title"]?.ToString() == "Cardiologists" ? "background-color: rgb(168, 74, 192); border:1px solid white;" : "" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Dentist", "Doctors_Dentist", "Home", null, new { @class = "dropdown-item", style = ViewData["Title"]?.ToString() == "Dentists" ? "background-color: rgb(168, 74, 192); border:1px solid white;" : "" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Neurologist", "Doctors_Neurologist", "Home", null, new { @class = "dropdown-item", style = ViewData["Title"]?.ToString() == "Neurologists" ? "background-color: rgb(168, 74, 192); border:1px solid white;" : "" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Eye-Specialist", "Doctors_EyeSpecialist", "Home", null, new { @class = "dropdown-item", style = ViewData["Title"]?.ToString() == "Eye_Specialists" ? "background-color: rgb(168, 74, 192); border:1px solid white;" : "" })
                                    </li>
                                    <li>
                                        <div class="dropdown-item text-white"
                                             style="background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
                                            Find Your
                                            Doctors!
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item me-2">
                                @Html.ActionLink(" About", "About", "Home", null, new { @class = "bi bi-info-circle nav-link", style = ViewData["Title"]?.ToString() == "About" ? "background-color: rgb(168, 74, 192); border:1px solid white;" : "" })
                            </li>
                            <li class="nav-item me-2">
                                @Html.ActionLink(" Contact Us", "Contact_Us", "Home", null, new { @class = "bi bi-telephone nav-link", style = ViewData["Title"]?.ToString() == "Contact_Us" ? "background-color: rgb(168, 74, 192); border:1px solid white;" : "" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink(" Feedback", "Feedback", "Home", null, new { @class = "bi bi-chat nav-link", style = ViewData["Title"]?.ToString() == "FeedBack" ? "background-color: rgb(168, 74, 192); border:1px solid white;" : "" })
                            </li>
                            <li class="ms-lg-auto mt-2 mt-lg-0">
                                <partial name="_LoginPartial">
                            </li>
                        </ul>
                    </div>
                </div>
                <div id="col2" class="col-auto order-2 order-lg-1 d-flex justify-content-end">
                    <span class="navbar-brand mb-0 h1 text-white fwt-bold d-lg-none d-xl-block ">
                        doctorBook.com
                        <i class="fa fa-user-md fs-3"></i>
                    </span>
                </div>
            </div>
        </div>
    </nav>



    @RenderBody()

    <footer id="layoutFooter" class="bd-footer py-1 py-md-2 mt-5 border-top text-white"
            style=" background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
        <div class="container py-5 px-4 px-md-3 text-body-secondary">
            <div class="row">
                <div id="col1" class="col-12 col-lg mb-1  mb-4 mb-lg-0">
                    <i class="fa fa-user-md fs-3 text-white"></i>
                    <span class="fs-5 fw-bold text-white">doctorBook.com</span>
                    <p class="text-light">&copy; 2024 doctorBook.com all rights reserved.   <a href="/Home/Terms_of_use" class="text-decoration-line text-primary">Terms-of-use</a></p>
                    <div class="row mt-3">
                        <div class="col-6 col-lg-12">
                            <p class="text-white mb-1 fw-bold" style="font-size:large;">Follow Us on:</p>
                            <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="me-2"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="me-2"><i class="fab bi-linkedin"></i></a>
                        </div>
                        <div class="col-6 col-lg-12 text-end mt-3 mb-2">
                            <a class="top" href="#">Back to Top</a>
                        </div>
                    </div>
                </div>
                <div id="col2" class="col-6 col-lg offset-lg-1 mb-1 mt-3 mt-lg-0 ps-sm-5 ps-lg-0">
                    <h5 class="text-white fwt-bold mb-3 fst-italic text-decoration-underline">Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-1">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="mb-1">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="mb-1">@Html.ActionLink("Contact Us", "Contact_Us", "Home")</li>
                        <li class="mb-1">@Html.ActionLink("Feedback", "Feedback", "Home")</li>
                    </ul>
                </div>
                <div id="col3" class="col-6 col-lg offset-lg-1 mb-1 mt-3 mt-lg-0 ps-sm-5 ps-lg-0">

                    <h5 class="text-white fwt-bold mb-3 fst-italic text-decoration-underline">Doctor Categories</h5>
                    <ul class="list-unstyled">
                        <li class="mb-1">@Html.ActionLink("Cardiologist", "Doctors_Cardiologist", "Home")</li>
                        <li class="mb-1">@Html.ActionLink("Dentist", "Doctors_Dentist", "Home")</li>
                        <li class="mb-1">@Html.ActionLink("Neurologist", "Doctors_Neurologist", "Home")</li>
                        <li class="mb-1">@Html.ActionLink("Eye-Specialist", "Doctors_EyeSpecialist", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    @if (User.Identity?.Name == null)
    {
        <div class="alert alert-secondary mb-0 alert-dismissible show sticky-bottom rounded-0" role="alert">
            <i class="bi bi-exclamation-triangle me-1"></i><strong>Attention!</strong> You have to <a style="color:black;" href="/Identity/Account/Login">Login</a> first for booking a
            doctor.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <script src="~/lib/bootstrap/bootstrap js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var dropdowns = document.querySelectorAll('.navbar-nav .dropdown');

            dropdowns.forEach(function (dropdown) {
                dropdown.addEventListener('mouseover', function () {
                    var dropdownMenu = dropdown.querySelector('.dropdown-menu');
                    dropdownMenu.classList.add('show');
                });

                dropdown.addEventListener('mouseleave', function () {
                    var dropdownMenu = dropdown.querySelector('.dropdown-menu');
                    dropdownMenu.classList.remove('show');
                });
            });
        });
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>
