<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Doctor Panel</title>
    <link href="~/lib/bootstrap/bootstrap css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/my css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @RenderSection("Styles",required:false)
</head>

<body>

    <nav id="navbar" class="navbar navbar-expand-lg mb-2 border-bottom-dark py-2 shadow sticky-top"
         style=" background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
        <div class="container">
            <div class="row w-100">
                <div id="col1" class="col-auto col-lg order-1 order-lg-2">
                    <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-lg-flex justify-content-lg-start bg-transparent rounded"
                         id="navbarSupportedContent">
                        <ul class="navbar-nav mb-2 mb-lg-0 w-100 ">
                            <li class="nav-item me-2">
                                @Html.ActionLink(" Home", "Index", "Doctor", null, new { @class = "nav-link bi bi-house", style = ViewData["Title"]?.ToString() == "Home" ? "background-color: rgb(168, 74, 192); border:1px solid white; " : "" })
                            </li>
                            <li class="nav-item me-2">
                                @Html.ActionLink(" Profile", "View_Profile", "Doctor", null, new { @class = "nav-link bi bi-person-vcard", style = ViewData["Title"]?.ToString() == "Profile" ? "background-color: rgb(168, 74, 192); border:1px solid white; " : "" })
                            </li>
                            <li class="nav-item me-2">
                                @Html.ActionLink(" Appointments", "Appointments", "Doctor", null, new { @class = "bi bi-calendar nav-link", style = ViewData["Title"]?.ToString() == "My Appointments" ? "background-color: rgb(168, 74, 192) ; border:1px solid white;" : "" })
                            </li>
                            <li class="ms-lg-auto mt-2 mt-lg-0">
                                <partial name="_LoginPartial"></partial>
                            </li>
                        </ul>
                    </div>
                </div>
                <div id="col2" class="col-auto order-2 order-lg-1 d-flex justify-content-end">
                    <span class="navbar-brand mb-0 h1 text-white fwt-bold ">
                        doctorBook.com
                        <i class="fa fa-user-md fs-3"></i>
                    </span>
                </div>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="bd-footer py-1 py-md-2 mt-5 border-top text-white"
            style=" background: linear-gradient(180deg, rgb(161, 62, 185) 0%, rgb(62, 9, 68) 100%);">
        <div class="container py-5 px-4 px-md-3 text-body-secondary">
            <div class="row">
                <div id="col1" class="col-12 col-lg mb-1  mb-4 mb-lg-0 ps-5">
                    <i class="fa fa-user-md fs-3 text-white"></i>
                    <span class="fs-5 fw-bold text-white">doctorBook.com</span>
                    <p class="text-light">&copy; 2024 doctorBook.com all rights reserved.   <a href="/Home/Terms_of_use" class="text-decoration-line text-primary">Terms-of-use</a></p>
                    <div class="row mt-3">
                        <div class="col-6 col-lg-12">
                            <p class="text-white mb-1 fw-bold" style="font-size:large;">Follow Us on:</p>
                            <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="me-2"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="me-2"><i class="fab bi-linkedin"></i></a>
                        </div>
                        <div class="col-6 col-lg-12 text-end mt-3 mb-2">
                            <a class="top" href="#">Back to Top</a>
                        </div>
                    </div>
                </div>
                <div id="col2" class="col-6 col-lg offset-lg-1 mb-1 mt-3 mt-lg-0 ps-sm-5 ps-lg-0">
                    <h5 class="text-white fwt-bold mb-3 fst-italic text-decoration-underline">Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-1">@Html.ActionLink("Home", "Index", "Doctor",null)</li>
                        <li class="mb-1">@Html.ActionLink("View Profile", "View_Profile", "Doctor", null)</li>
                        <li class="mb-1">@Html.ActionLink("View Appointments", "Appointments", "Doctor", null)</li>                        
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="~/lib/bootstrap/bootstrap js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</body>

</html>
